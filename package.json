{
  "name": "ucycle-api",
  "version": "0.0.1",
  "description": "uCycle",
  "keywords": [
    "fashion",
    "clean architecture",
    "clean code",
    "ddd",
    "bdd",
    "tdd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest",
    "type-orm"
  ],
  "author": {
    "name": "Gustavo Eklund",
    "email": "gustavo.eklund@esattodigital.com",
    "url": "https://github.com/GustavoEklund"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GustavoEklund/ucycle-api.git"
  },
  "bugs": {
    "url": "https://github.com/GustavoEklund/ucycle-api/issues",
    "email": "gustavo.eklund@esattodigital.com"
  },
  "license": "ISC",
  "scripts": {
    "start": "node -r dotenv/config ./dist/main",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config --inspect=0.0.0.0:9229 ./src/main",
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json",
    "build:watch": "rimraf dist && tsc -p ./tsconfig-build.json -w",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage",
    "test:fb-api": "npm test -- -c ./jest.integration.config.js ./tests/external/facebook-api.test.ts",
    "test:s3": "npm test -- -c ./jest.integration.config.js ./tests/external/aws-s3-file-storage.test.ts",
    "prepare": "husky install",
    "migration:generate": "ts-node-dev -r tsconfig-paths/register ./node_modules/.bin/typeorm -f ormconfig.ts migration:generate -n",
    "migration:run": "npm run build && ts-node-dev -r tsconfig-paths/register ./node_modules/.bin/typeorm -f ormconfig.ts migration:run"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.2",
    "aws-sdk": "^2.1035.0",
    "axios": "^0.24.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "jsonwebtoken": "^8.5.1",
    "keycloak-connect": "^17.0.0",
    "module-alias": "^2.2.2",
    "multer": "^1.4.3",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@jest-mock/express": "^1.4.5",
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/module-alias": "^2.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-extended": "^3.0.1",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.1.2",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.15",
    "pg-mem": "^2.1.9",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": "16.x"
  }
}
